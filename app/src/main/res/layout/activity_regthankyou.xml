<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.geoverifi.geoverifi.RegisterActivity">
    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:src="@mipmap/logo"
            android:layout_gravity="center_horizontal"
            />



        <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_thankyou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/thankyou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thank you for Registering into Traxx. An email has been sent to confirm your registration. Please check to confirm your registration. "/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/createAccountBtn"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorIcons"
        android:layout_marginTop="16dp"
        android:text="Login"/>

    </LinearLayout>
</ScrollView>
